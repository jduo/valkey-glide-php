{
    "name": "valkey-io/valkey-glide-php",
    "description": "General Language Independent Driver for the Enterprise (GLIDE) for Valkey",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Valkey GLIDE contributors",
            "homepage": "https://github.com/valkey-io/valkey-glide-php"
        }
    ],
    "homepage": "https://github.com/valkey-io/valkey-glide-php",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "google/protobuf": "^v4.32.0",
        "protobuf-php/protobuf-plugin": "^0.1.3",
        "symfony/polyfill-ctype": "^1.32.0"
    },
    "autoload": {
        "psr-4": {
            "ValkeyGlide\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs --standard=phpcs.xml"
        ],
        "lint:fix": [
            "phpcbf --standard=phpcs.xml"
        ],
        "analyze": [
            "phpstan analyze"
        ],
        "test": [
            "php run-tests.php tests/"
        ],
        "check": [
            "@lint",
            "@analyze"
        ],
        "post-install-cmd": [
            "@build-extension-fallback"
        ],
        "post-update-cmd": [
            "@build-extension-fallback"
        ],
        "build-extension-fallback": [
            "php scripts/build.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "pie": {
            "build": {
                "unix": [
                    "python3 utils/remove_optional_from_proto.py",
                    "cd valkey-glide/ffi",
                    "cargo build --release",
                    "cd ../../",
                    "phpize",
                    "make clean",
                    "make build-modules-pre",
                    "make install"
                ],
                "darwin": [
                    "python3 utils/remove_optional_from_proto.py",
                    "cd valkey-glide/ffi",
                    "cargo build --release",
                    "cd ../../",
                    "phpize",
                    "make clean",
                    "make build-modules-pre",
                    "make install"
                ]
            }
        },
        "pecl": {
            "package-name": "valkey-glide",
            "channel": "pecl.php.net"
        }
    }
}
